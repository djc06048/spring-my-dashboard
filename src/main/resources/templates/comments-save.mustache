{{>layout/header}}

<h1>댓글 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="content"> 내용 </label>
                <textarea class="form-control" id="comment_content" placeholder="내용을 입력하세요"></textarea>
            </div>
            <div class="form-group">
                <label for="postId"> 글 번호 </label>
                <textarea class="form-control" id="comment_postId" placeholder="글 번호" readonly>{{postId}}</textarea>
            </div>

            <div class="form-group">
                <label for="userId"> 작성자 </label>
                <textarea class="form-control" id="comment_userId" placeholder="작성자 일련번호를 적으세요">{{user.getEmail}}</textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-comment-save">등록</button>
    </div>
</div>

{{>layout/footer}}